#!/usr/bin/env bash

# Single main WordPress target via ACF Schema API plugin.
# Copy this file to target-main.sh and fill in your values.
# target-main.sh is gitignored â€” never commit credentials.

TARGET_BASE_URL="https://example.com"

# WordPress API auth (Application Password user).
# You can also set WP_API_USER / WP_API_APP_PASSWORD env vars instead.
TARGET_API_USER=""
TARGET_API_APP_PASSWORD=""

# HMAC signing secret for push requests.
# Use env var ACF_SCHEMA_API_HMAC_SECRET in CI or set here locally.
TARGET_API_HMAC_SECRET=""

# Optional overrides.
TARGET_API_PULL_PATH="/wp-json/acf-schema/v1/pull"
TARGET_API_PUSH_PATH="/wp-json/acf-schema/v1/push"
TARGET_API_PUSH_ROUTE="/acf-schema/v1/push"
TARGET_CURL_TIMEOUT="30"
