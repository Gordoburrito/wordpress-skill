#!/usr/bin/env bash
# Shared workspace environment for all WordPress ACF skills.
# Copy to .env and fill in real values.

# Required for both schema deploy and content API scripts.
TARGET_BASE_URL="https://your-site.example.com"
WP_API_USER="your-wp-username"
WP_API_APP_PASSWORD="xxxx xxxx xxxx xxxx xxxx xxxx"
ACF_SCHEMA_API_HMAC_SECRET="replace-with-long-random-secret"

# Optional aliases (normally not needed if variables above are set).
# WP_API_BASE_URL="https://your-site.example.com"
# WP_API_USERNAME="your-wp-username"
# TARGET_API_USER="your-wp-username"
# TARGET_API_APP_PASSWORD="xxxx xxxx xxxx xxxx xxxx xxxx"
# TARGET_API_HMAC_SECRET="replace-with-long-random-secret"

# Optional API behavior overrides.
ALLOWED_RESOURCE_TYPES="pages,posts"
DEFAULT_RESOURCE_TYPE="pages"
WP_API_TIMEOUT_SECONDS="30"
TARGET_API_PULL_PATH="/wp-json/acf-schema/v1/pull"
TARGET_API_PUSH_PATH="/wp-json/acf-schema/v1/push"
TARGET_API_PUSH_ROUTE="/acf-schema/v1/push"
TARGET_CURL_TIMEOUT="30"
